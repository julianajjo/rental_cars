<h1>Cadastrar Novo Cliente</h1>
<% if @customer.errors.any? %>
  <div id="errors">
    <p>Não foi possível cadastrar o novo cliente. Verifique os erros abaixo:</p>
    <ul>
    <% @customer.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_with(model: @customer, local: true) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :cpf %>
    <%= f.text_field :cpf %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <%= f.submit 'Salvar' %>
<% end %>