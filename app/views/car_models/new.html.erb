<h1>Cadastrar Modelo de Carro</h1>

<%= form_with(model: CarModel.new, local: true) do |f| %>
  <div>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :fuel_type, 'CombustÃ­vel' %>
    <%= f.text_field :fuel_type %>
  </div>
  <div>
    <%= f.label :motorization, 'Motor' %>
    <%= f.text_field :motorization %>
  </div>
  <div>
    <%= f.label :year, 'Ano' %>
    <%= f.text_field :year %>
  </div>
  <div>
    <%= f.label :manufacturer_id, 'Fabricante'%>
    <%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name) %>
  </div>
  <div>
    <%= f.label :car_category_id, 'Categoria'%>
    <%= f.collection_select(:car_category_id, CarCategory.all, :id, :name) %>
  </div>
  <%= f.submit 'Enviar'%>
<% end %>